// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  name      String
  NID       String   @unique
  DOB       String
  number    Int
  email     String   @unique
  faculty   String
  createdAt DateTime @default(now())
}

model Reject {
  id        Int      @id @default(autoincrement())
  name      String
  NID       String   @unique
  DOB       String
  number    Int
  email     String   @unique
  faculty   String
  reason    String
  createdAt DateTime @default(now())
}

model Accept {
  id        Int      @id @default(autoincrement())
  name      String
  NID       String   @unique
  DOB       String
  number    Int
  email     String   @unique
  faculty   String
  createdAt DateTime @default(now())
}

model Staff {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}
